[colors]
red = #f00
grn = #0f0
blu = #00f

mut_red = #f36
mut_grn = #3f6
mut_blu = #36f
mut_ylo = #aa2

dva_beige = #f8c5ae
dva_blue = #92baf4
dva_blue_t = #aa92baf4
dva_pink = #ee4bb5
dva_pink_t = #aaee4bb5
dva_brown = #633633
dva_lpink = #feabe6

# background of the bar
background = ${colors.dva_pink_t}
# background for highlighted elements
background-alt = ${colors.dva_blue}

# primary foreground color
foreground = #FFF
# highlight foreground color
foreground-alt = #FFF


primary = ${colors.dva_blue}
secondary = ${colors.red}
tertiary = ${colors.mut_blu}
alert = ${colors.mut_red}
error = ${colors.mut_ylo}


[global/wm]
margin-top = 3
margin-bottom = 3

[bar/main]
# Set monitor to the MONITOR env var
monitor = ${env:MONITOR}
width = 100%
height = 24
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}
overline-size = 2
overline-color = ${colors.primary}
underline-size = 2
underline-color = ${colors.tertiary}
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = "Ubuntu Mono: size=10;0"
font-1 = "Ubuntu: size=10;0"
#font-2 = "EmojiOne: size=10;0"
# A more crowded version
# modules-left = cpu memory filesystem wlan eth battery0 battery1 temperature 
# modules-center = i3
# modules-right = volume date

# A cleaner version
modules-left = date battery0 battery1 volume wlan eth
modules-center =
modules-right = i3 
tray-position = center
tray-padding = 2
bottom = true
wm-restack = i3
border-bottom-size = 2
border-bottom-color =  ${colors.dva_blue}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.foreground-alt}
label-mode-background = ${colors.alert}

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible = %name%
label-visible-foreground = 2
label-visible-padding = 2


[module/volume]
type = internal/volume
format-volume = <label-volume>
label-volume = "[V]%percentage%%"
label-volume-foreground = ${root.foreground}
format-muted-foreground = ${colors.foreground}
label-muted = "[V]MUTE"
format-volume-underline = ${colors.primary}
format-muted-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
label-mounted = %free% free
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.primary}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.primary}
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.primary}
label = %percentage%%

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 87
units = true
format-underline = ${colors.primary}
label = %temperature%
label-warn = %temperature%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
format-connected = <label-connected>
format-connected-underline = ${colors.primary}
format-disconnected-underline = ${colors.alert}
label-connected = "[W]%essid%"
label-disconnected = "[W]DOWN"
label-disconnected-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp0s25
interval = 5
format-connected-underline = ${colors.primary}
format-connected-prefix = "[E]"
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected-underline = ${colors.alert}
label-disconnected = "[E]DOWN"
label-disconnected-foreground = ${colors.foreground-alt}

[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 96 

label-charging = "[0+]%percentage%%"
format-charging = <label-charging>
format-charging-underline = ${colors.primary}

format-discharging-prefix = "[0-]"
format-discharging = <label-discharging>
format-discharging-underline = ${colors.secondary}

format-full-prefix = "[0F]" 
format-full-underline = ${colors.primary}

[module/battery1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 98 

label-charging = "[1+]%percentage%%"
format-charging = <label-charging>
format-charging-underline = ${colors.primary}

format-discharging-prefix = "[1-]"
format-discharging = <label-discharging>
format-discharging-underline = ${colors.secondary}

format-full-prefix = "[1F]" 
format-full-underline = ${colors.primary}

[module/date]
type = internal/date
interval = 5
date = "%a %m/%d/%y"
time = "%l:%M %P"
format-underline = ${colors.primary}
label = %date% %time%
