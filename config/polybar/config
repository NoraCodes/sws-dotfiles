[colors]
red = #f00
grn = #0f0
blu = #00f

mut_red = #f36
mut_grn = #3f6
mut_blu = #36f
mut_ylo = #aa2

cs_light = #ffe5b6
cs_midlight = #ffdb99
cs_mid = #ffd992
cs_middark = #d3b57f
cs_dark = #595143

# background of the bar
background = ${colors.cs_dark}
# background for highlighted elements
background-alt = ${colors.mut_red}

# primary foreground color
foreground = #FFF
# highlight foreground color
foreground-alt = #FFF


primary = ${colors.mut_blu}
secondary = ${colors.mut_grn}
tertiary = ${colors.mut_red}
alert = ${colors.mut_red}
error = ${colors.mut_ylo}


[global/wm]
margin-top = 3
margin-bottom = 3

[bar/main]
# Set monitor to the MONITOR env var
monitor = ${env:MONITOR}
width = 100%
height = 24
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}
overline-size = 2
overline-color = ${colors.primary}
underline-size = 2
underline-color = ${colors.tertiary}
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = "Ubuntu Mono: size=10;0"
font-1 = "Ubuntu: size=10;0"
font-2 = "FontAwesome: size=10;0"

# A more crowded version
modules-center = i3 
modules-right = volume wlan eth date battery0 battery1
modules-left = lsb kernel up cpu memory filesystem

# A cleaner version
#modules-center =
#modules-left = i3 
#modules-right = date battery0 battery1 volume wlan eth

# Tray config. Uncomment to enable system tray.
#tray-position = right
#tray-padding = 2

bottom = true
wm-restack = i3
border-bottom-size = 0

[module/kernel]
type = custom/script
exec = uname -r
tail = false
interval = 1024
format-underline = ${colors.primary}

[module/lsb]
type = custom/script
exec = (lsb_release -d | awk {'print $2" "$3'})
tail = false
interval = 1024
format-underline = ${colors.primary}

[module/up]
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
label = Up %output%
format-underline = ${colors.primary}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.foreground-alt}
label-mode-background = ${colors.alert}

label-focused = %name%
label-focused-background = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-visible = %name%
label-visible-foreground = 1
label-visible-padding = 1


[module/volume]
type = internal/volume
format-volume = <label-volume>
label-volume = "[V]%percentage%%"
label-volume-foreground = ${root.foreground}
format-muted-foreground = ${colors.foreground}
label-muted = "[V]MUTE"
format-volume-underline = ${colors.primary}
format-muted-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
label-mounted = %free%
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.primary}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.primary}
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.primary}
label = %percentage%%

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 87
units = true
format-underline = ${colors.primary}
label = %temperature%
label-warn = %temperature%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
format-connected = <label-connected>
format-connected-underline = ${colors.primary}
format-disconnected-underline = ${colors.alert}
label-connected = "[W]%essid%"
label-disconnected = "[W]DOWN"
label-disconnected-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp0s25
interval = 5
format-connected-underline = ${colors.primary}
format-connected-prefix = "[E]"
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected-underline = ${colors.alert}
label-disconnected = "[E]DOWN"
label-disconnected-foreground = ${colors.foreground-alt}

[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 96 

label-charging = "[0+]%percentage%%"
format-charging = <label-charging>
format-charging-underline = ${colors.primary}

format-discharging-prefix = "[0-]"
format-discharging = <label-discharging>
format-discharging-underline = ${colors.secondary}

format-full-prefix = "[0F]" 
format-full-underline = ${colors.primary}

[module/battery1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 98 

label-charging = "[1+]%percentage%%"
format-charging = <label-charging>
format-charging-underline = ${colors.primary}

format-discharging-prefix = "[1-]"
format-discharging = <label-discharging>
format-discharging-underline = ${colors.secondary}

format-full-prefix = "[1F]" 
format-full-underline = ${colors.primary}

[module/date]
type = internal/date
interval = 5
date = "%a %m/%d/%y"
time = "%l:%M %P"
format-underline = ${colors.primary}
label = %date% %time%

[module/backlight]
type = internal/xbacklight
output = ${env:MONITOR}
label = [B] %percentage%%



